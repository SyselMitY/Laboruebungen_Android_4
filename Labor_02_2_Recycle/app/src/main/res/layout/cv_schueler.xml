<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSchueler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/schuelerBild"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:srcCompat="@mipmap/uhu" />

            <TextView
                android:id="@+id/schuelerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/schuelerKatnr"
                android:layout_marginStart="22dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/schuelerBild"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/schuelerGeschlecht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/schuelerName"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                android:layout_toEndOf="@+id/schuelerBild" />

            <TextView
                android:id="@+id/schuelerKatnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/schuelerBild" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>